generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String   @unique
  credits   Int      @default(10)  // Changed from 0 to 10
  createdAt DateTime @default(now())
  cars      Car[]
  votes     Vote[]
}

model Car {
  id          String   @id @default(uuid())
  userId      String
  imageUrl    String
  title       String
  description String
  style       String
  environment String
  votes       Int      @default(0)
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  userVotes   Vote[]
}

model Vote {
  id        String   @id @default(uuid())
  carId     String
  userId    String
  voteType  String
  createdAt DateTime @default(now())
  car       Car      @relation(fields: [carId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([carId, userId])
}