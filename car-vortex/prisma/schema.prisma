datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

model User {
  id        String   @id
  email     String   @unique
  name      String?
  credits   Int      @default(10)
  createdAt DateTime @default(now())
  cars      Car[]
  votes     Vote[]
}

model Car {
  id          String   @id @default(uuid())
  userId      String
  imageUrl    String
  title       String
  type        String
  description String
  style       String
  environment String
  status      String?
  replicateId String?
  featured    Boolean  @default(false)
  votes       Int      @default(0)
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
  favorites   Favorite[]
  votedBy     Vote[]
  @@index([votes(sort: Desc)])
}
model Favorite {
  id     String @id @default(uuid())
  userId String
  carId  String
  car    Car    @relation(fields: [carId], references: [id])

  @@unique([userId, carId])
}
model Vote {
  id     String @id @default(cuid())
  carId  String
  userId String
  car    Car    @relation(fields: [carId], references: [id])

  @@unique([carId, userId])
  User User[]
}